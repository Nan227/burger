
<div class="row">
  
  <div class="col-4 text-center">

    <form>
      {{> section-title title="Add A Burger"}}
      <div class="form-group">
        <input class="form-control" type="text" id="burger-input" placeholder="Create your burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    {{> section-title title="  Order"}}
    <ul class="list-group">
      
    {{#each burgerList}}
      {{#unless completed}}
       {{burger}}
        {{!-- > burgers/burger status=  "Not Devour it! --}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
    {{> section-title title="Devoured it!"}}
    <ul class="list-group">
      {{burger}}
      {{#each burgerList}}
        {{#if completed}}
          {{> burgers/burger status= "Devoured it!"}}  
        {{/if}}
      {{/each}}
    </ul>
  </div>
  

</div>
